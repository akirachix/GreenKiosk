<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cvOrdes"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgProduct1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/etProduct"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Name"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/etPrices"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgProduct1" />

            <TextView
                android:id="@+id/etKilograms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="kilograms"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etPrices" />

            <TextView
                android:id="@+id/etPrices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="Prices"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etProduct" />

            <Button
                android:id="@+id/etMinus"
                android:layout_width="42dp"
                android:layout_height="43dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/add_to_cart_button"
                app:layout_constraintBottom_toBottomOf="@+id/etAdd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/etAdd">

            </Button>

            <Button
                android:id="@+id/etAdd"
                android:layout_width="42dp"
                android:layout_height="43dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/add_to_cart_button"
                app:layout_constraintStart_toEndOf="@+id/etNumber"
                app:layout_constraintTop_toBottomOf="@+id/etKilograms" />

            <TextView
                android:id="@+id/etNumber"
                android:layout_width="13dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="70dp"
                android:text="1"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/etAdd"
                app:layout_constraintStart_toEndOf="@+id/etMinus"
                app:layout_constraintTop_toBottomOf="@+id/etKilograms" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>